{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@app/*"        : ["src/*"],
            "@sections/*"   : ["src/sections/*"],
            "@config/*"     : ["src/config/*"],
            "@modules/*"    : ["src/modules/*"],
            "@periods/*"    : ["src/periods/*"],
            "@professors/*" : ["src/professors/*"],
            "@sizes/*"      : ["src/sizes/*"],
            "@spaces/*"     : ["src/spaces/*"],
            "@subjects/*"   : ["src/subjects/*"],
        },
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "strictBindCallApply": false,
        "noFallthroughCasesInSwitch": false
    }
}
